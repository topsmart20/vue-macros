{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019"],
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "unplugin-vue-define-options": ["./packages/define-options/src"],
      "unplugin-vue-macros": ["./packages/macros/src"],
      "@vue-macros/*": ["packages/*/src"]
    }
  },
  "include": ["packages", "scripts"],
  "exclude": [
    "**/dist",
    "**/tests",
    "packages/volar/*.js",
    "**/vue2-macros*.d.ts"
  ]
}
