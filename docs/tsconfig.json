{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "vitepress", "unplugin-vue-macros/macros-global"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["**/*", "./.*/**/*"],
  "exclude": ["dist", "node_modules"]
}
