{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019"],
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": [],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["packages", "scripts"],
  "exclude": ["**/dist", "**/tests/fixtures"]
}
